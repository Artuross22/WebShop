@model WebShop.ViewModels.Basket.BasketViewModel


@{
    ViewBag.Title = "View";
}

<h2>Basket ID: @Model.Id</h2>

<table class="table">
    <tr>
        <th>
            Product ID
        </th>
        <th>
            Product
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.BasketLines)
    {
        @Html.Partial("_BasketLine", item)
    }
</table>

@Html.ActionLink("Buy", "Index", "Checkout")